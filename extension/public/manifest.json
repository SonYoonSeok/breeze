{
  "manifest_version": 3,
  "name": "Twelve - 강의 녹음/요약",
  "version": "0.1.0",
  "description": "온라인 강의 화면/음성을 캡처하고 실시간으로 전송합니다",
  "permissions": [
    "desktopCapture",
    "tabCapture",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "ws://localhost:*/*",
    "wss://*/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"],
      "run_at": "document_idle"
    }
  ]
}
